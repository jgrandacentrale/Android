<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="3"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:id="@+id/">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pays"
            android:id="@+id/button"
            android:layout_marginTop="0dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Livre"
            android:id="@+id/buttonLivre"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logos"
            android:id="@+id/boutonlogo"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUTAATO"
            android:textSize="10sp"
            android:id="@+id/startButton"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/button"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JSON"
            android:id="@+id/butJson"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUTOPPU"
            android:textSize="10sp"
            android:id="@+id/stopButton"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Async"
            android:id="@+id/butAsync"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contaato"
            android:id="@+id/contacts"
            android:layout_below="@+id/stopButton"
            android:layout_toLeftOf="@+id/stopButton"
            android:layout_toStartOf="@+id/stopButton"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="top|center" />

    </GridLayout>

</RelativeLayout>
